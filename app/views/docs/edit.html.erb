<h2>Редактирование документа</h2>

<%= form_for :doc, url: doc_path(@doc), method: :patch do |f| %>
    <p>Название заявления:<br>
    <%= f.text_field(:title, {:class => 'form-control'}) %>
    </p>
    <p>Шаблон заявления: <br>
    <%= f.text_area :body, {:class => 'form-control', rows: 15} %>
    </p>
    <p>
    <%= f.submit('Сохранить', {:class => 'btn btn-success'}) %>
    </p>
<% end %>
    
    