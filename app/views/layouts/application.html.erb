<!DOCTYPE html>
<html>
  <head>
    <title>Webdoc1</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <%# bootstrap header %>
    <div class="container">
    <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
      <div class="col-md-3 mb-2 mb-md-0">
        <a href="/" class="d-inline-flex link-body-emphasis text-decoration-none">
          <img src="<%= asset_path('document-icon.jpg') %>" alt="Can't show img" class="bi" width="50" height="50" title="Главная страница">
          <%# <span>текст к картинке</span> %>
          <%# <svg class="bi" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"/></svg> %>
        </a>
      </div>

      <%# <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
        <%# <li><span class="nav-link px-2 link-secondary"><%= link_to "Добавление док", new_doc_path %>
        <%# <li><a href="#" class="nav-link px-2">Features</a></li>
        <li><a href="#" class="nav-link px-2">Pricing</a></li>
        <li><a href="#" class="nav-link px-2">FAQs</a></li>
        <li><a href="#" class="nav-link px-2">About</a></li> %>
      <%# </ul> %>

      <div class="col-md-3 text-end">
          <% if current_user.present? %>
            <%= content_tag 'span', "Здравствуйте, #{current_user.name}", class: 'mr-sm' %>
            <%= button_to "Выйти", session_path, method: :delete %></button>
          <% else %>
            <button type="button" class="btn btn-outline-primary me-2"><%= link_to "Войти", new_session_path %></button>
            <button type="button" class="btn btn-outline-primary me-2"><%= link_to "Зарегистрироваться", new_user_path %></button>
          <% end %>
      </div>
    </header>
    </div>

    <div class="container">

      <div class="wrapper">
        <% if flash[:notice].present? %>
          <p class="alert alert-success"><%= flash[:notice] %></p>
        <% elsif flash[:alert].present? %>
          <p class="alert alert-danger"><%= flash[:alert] %></p>
          <% end %>

        <%= yield %>

      </div>
    </div>
  </body>
</html>
